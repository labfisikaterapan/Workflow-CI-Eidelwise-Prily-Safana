name: diabetes_classification

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      n_estimators: {type: int, default: 100}
      max_depth: {type: int, default: 10}
      min_samples_split: {type: int, default: 2}
      data_path: {type: str, default: "diabetes_preprocessing.csv"}
    command: "python modelling.py --n_estimators {n_estimators} --max_depth {max_depth} --min_samples_split {min_samples_split} --data_path {data_path}"
  
  train_default:
    command: "python modelling.py"
